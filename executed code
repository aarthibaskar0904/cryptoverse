            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 300px;
            margin: 10px;
            transition: transform 0.3s;
        }

        .crypto-card:hover {
            transform: translateY(-10px);
        }

